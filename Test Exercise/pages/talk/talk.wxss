.backimage{
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 100%;
  z-index: -999;
}

.chat-messages {
  height: 100%;
  padding-bottom: 100rpx; /* 可选，根据需要微调底部留白 */
  opacity: 1;
  transition: opacity;
}
.message-container {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}
.avatar {
  width: 130rpx;
  height: 130rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}
.robot-bubble {
  position: relative;
  margin-top: 18rpx;
  display: inline-block;
  min-height: 30rpx; /* 设置一个最小高度，确保对话框有一定高度 */
}
.bubble-background {
  position: absolute;
  top: 0;
  left: 0;
  margin-left: -40rpx;
  margin-top: -10rpx;
  width: 120%;
  height: 120%;
  z-index: -1;
}
.robot-message {
  padding: 25rpx;
  color: red;
  display: inline-block;
  line-height: 1.5;
  white-space: normal; /* 允许文字换行 */
  word-break: break-all; /* 允许单词在行内换行 */
  max-width: 90%; /* 设置最大宽度，以防止文字过长导致对话框过宽 */
}
.chat-content {
  width: 85%;
  margin-top: 60rpx; /* 可选，根据需要微调垂直位置 */
}
.message-container {
  display: flex;
  align-items: flex-start;
}
