/* pages/information/information.wxss */
.backimage{
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 100%;
  z-index: -999;
}

.container {
  padding: 30rpx;
}

.avatar-wrapper {
  display: flex;
  align-items: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  white-space: nowrap; /* 防止昵称换行 */
  overflow: hidden; /* 超出部分隐藏 */
  text-overflow: ellipsis; /* 显示省略号 */
}

.account {
  font-size: 35rpx;
  color: #666666;
}
