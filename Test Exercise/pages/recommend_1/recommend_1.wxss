.backimage{
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 100%;
  z-index: -999;
}

.product-information{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -200rpx;
}
.picture{
  width: 250rpx;
  height: 250rpx;
}
.product-name{
  font-size: 30rpx;
  margin-top: 0rpx;
}

.ingredient{
  position: relative;
  margin-left: 0rpx;
  width: 100%;
  height: 450rpx;
}
.background-image{
  width: 100%;
  height: 90%;
  object-fit: cover;
}
.ingredient-information{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.textpart{
  font-size: 35rpx;
  color: red;
  margin-top: -50rpx;
}
.bubble{
  width: 700rpx;
  height: 140rpx;
}
.textpart1{
  font-size: 35rpx;
  color: red;
  margin-top: 25rpx;
}

.range{
  position: relative;
  margin-left: 0rpx;
  width: 100%;
  height: 350rpx;
}
.range-information{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: row;
  align-items: center;
}
.range-bubble{
  width: 200rpx;
  height: 140rpx;
}
.check1{
